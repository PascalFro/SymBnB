{% set url = path('ads_show', {'slug': ad.slug}) %}

  <div class="col-md-4">
    <div class="card bg-light mb-3">
      <div class="card-header text-center">
        {{ ad.rooms }} chambres, <b>{{ ad.price }}€ / nuit</b></br>
        <small>Pas encore noté</small>
      </div>
      <a href="{{ url }}">
        <img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height: 200px; width: 100%; display: block">
      </a>
      <div class="card-body">
        <h4 class="card-title"><a href="{{ path('ads_show', {'slug': ad.slug}) }}">{{ ad.title }}</a></h4>
        <p class="card-text"<p>{{ ad.introduction }}</p>
        <a href="{{ url }}" class="btn btn-secondary">En savoir +</a>
      </div>
    </div>
  </div>
