{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire n°{{ comment.id }}{% endblock %}

{% block body %}

  <div class="container">
    <h1 class="my-5">Modification du commentaire n°{{ comment.id }}</h1>

    <div class="alert alert-info">
          <p><b>Annonce liée :</b> {{ comment.ad.title }}</p>
          <p><b>Auteur :</b> {{ comment.author.fullName }}</p>
          <p><b>Date de création :</b> {{ comment.createdAt | date('d/m/Y H:m')}}</p>
          <p><b>Note donnée :</b> {{ comment.rating }}</p>
    </div>

{{ form_start(form) }}
    <div class="col mt-3">
      <p>Contenu du commentaire :</p>
      {{ form_widget(form.content) }}
    </div>

    <div class="col mt-3">
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-check"></i>&nbsp;
        Enregistrer les modifications
      </button>
      {{ form_end(form) }}
    </div>

  </div>

{% endblock %}
